<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrund"
    tools:context="infotainment.view.OptionsActivity">

    <Button
        android:id="@+id/OptionsActivity_btn_colorblindmode"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginStart="425dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/appbuttons"
        android:text="Colorblind mode"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/OptionsActivity_btn_back"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginStart="424dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/appbuttons"
        android:text="Back"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OptionsActivity_btn_colorblindmode" />

</android.support.constraint.ConstraintLayout>
