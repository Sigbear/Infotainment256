<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle" >
    <corners android:radius="5dp" />
    <gradient
        android:centerColor="@color/icons"
        android:centerX="0"
        android:centerY="100%"
        android:endColor="@color/primary_dark"
        android:gradientRadius="5dp"
        android:startColor="@color/primary_dark"
        android:type="sweep"
        android:useLevel="false" />
    <padding
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="270dp"
        android:height="60dp"
        />
    <stroke
        android:width="3dp"
        android:color="@color/primary_text" />
</shape>